		      <td class="BigCount CountComments"><%= post.user_id %></td>
		      <td class="BlockColumn LatestPost"><%= post.body %></td>
		    <td><%= link_to 'Show', post_path(post) %>
		        <%= link_to 'Edit', edit_post_path(post) %>
